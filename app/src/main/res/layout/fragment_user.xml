<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEDC2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_bar"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="#FFC107"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#FFC107"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:src="@drawable/user_image" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="195dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:orientation="vertical"
                android:text="点击登录"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_id_tv"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:orientation="vertical"
                android:text=""
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="0dp"
        android:text="我的订单"
        android:textStyle="bold" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1">

        <ImageButton
            android:id="@+id/wait_pay"

            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#FBEDC2"
            android:src="@drawable/wait_pay" />

        <ImageButton
            android:id="@+id/wait_deliver"
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FBEDC2"
            android:src="@drawable/wait_deliver" />

        <ImageButton
            android:id="@+id/wait_receive"
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FBEDC2"
            android:src="@drawable/wait_receive" />

        <ImageButton
            android:id="@+id/wait_comment"
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="#FBEDC2"
            android:src="@drawable/wait_comment" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1">

        <TextView
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="待付款" />

        <TextView
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="待发货" />

        <TextView
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="待收货" />

        <TextView
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="待评价" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <!--        <EditText-->
        <!--            android:id="@+id/login_name_et"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintVertical_bias="0.361"-->
        <!--            android:layout_width="257dp"-->
        <!--            android:layout_height="65dp"-->
        <!--            -->
        <!--            android:gravity="center"-->
        <!--            android:hint="邮箱/手机号"-->
        <!--            android:textColorHint="#606060"-->
        <!--            android:textSize="18sp" />-->

        <TextView
            android:id="@+id/user_all_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingLeft="30dp"
            android:text="全部订单"
            android:textColor="#555"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingLeft="30dp"
            android:text="地址管理"
            android:textColor="#555"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/user_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingLeft="30dp"
            android:text="注销账号"
            android:textColor="#555"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


    <Button
        android:id="@+id/user_logout_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/test"
        android:gravity="center"
        android:text="退出登录"
        android:textSize="19sp" />

</LinearLayout>